<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/essence_item_root"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/list_item_bg_selector"
    android:orientation="vertical"
    android:paddingTop="@dimen/dimen_item_border_top">

    <RelativeLayout
        android:id="@+id/essence_author_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="15dp"
        android:gravity="center_vertical">

        <ImageView
            android:id="@+id/essence_head_img"
            android:layout_width="@dimen/dimen_item_headimg_big_width"
            android:layout_height="@dimen/dimen_item_headimg_big_width"
            android:layout_centerVertical="true"
            android:src="@drawable/icon_avatar_middle" />

        <ImageView
            android:id="@+id/story_item_weibo_v"
            android:layout_width="@dimen/story_item_weibo_v_size_middle"
            android:layout_height="@dimen/story_item_weibo_v_size_middle"
            android:layout_alignBottom="@id/essence_head_img"
            android:layout_alignRight="@id/essence_head_img"
            android:src="@drawable/weibo_v_blue"
            android:visibility="gone" />

        <TextView
            android:id="@+id/essence_commentcount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:text="333"
            android:textColor="@color/color_item_author"
            android:textSize="@dimen/dimen_item_time_textsize" />

        <ImageView
            android:id="@+id/essence_commentcount_img"
            android:layout_width="@dimen/dimen_item_praise_width"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginRight="3dp"
            android:layout_toLeftOf="@+id/essence_commentcount"
            android:padding="1dp"
            android:scaleType="fitCenter"
            android:src="@drawable/fragmen_tab_story_commentcount_pressed" />

        <TextView
            android:id="@+id/tv_essence_likecount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginRight="5dp"
            android:layout_toLeftOf="@+id/essence_commentcount_img"
            android:text="333"
            android:textColor="@color/color_item_author"
            android:textSize="@dimen/dimen_item_time_textsize" />

        <ImageView
            android:id="@+id/essence_likecount_img"
            android:layout_width="@dimen/dimen_item_praise_width"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginRight="3dp"
            android:layout_toLeftOf="@+id/tv_essence_likecount"
            android:padding="1dp"
            android:scaleType="fitCenter"
            android:src="@drawable/fragmen_tab_story_supportcount_pressed" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@+id/essence_likecount_img"
            android:layout_toRightOf="@id/essence_head_img"
            android:gravity="center_vertical"
            android:orientation="vertical"
            android:paddingLeft="10dip">

            <TextView
                android:id="@+id/essence_author_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:singleLine="true"
                android:text="叶小兔"
                android:textColor="@color/color_item_author"
                android:textSize="@dimen/dimen_item_author_textsize" />

            <TextView
                android:id="@+id/essence_author_createtime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:singleLine="true"
                android:text="3小时前"
                android:textColor="@color/color_item_content"
                android:textSize="@dimen/dimen_item_time_textsize"
                android:visibility="gone" />

        </LinearLayout>
    </RelativeLayout>

    <ImageView
        android:id="@+id/essence_booktcontent_img"
        android:layout_width="match_parent"
        android:layout_height="178dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="@dimen/dimen_item_inner_padding_top"
        android:scaleType="centerCrop"
        android:src="@drawable/loading_chosen_cover_no_wifi"
        android:visibility="visible"
        tools:ignore="ContentDescription" />

    <LinearLayout
        android:id="@+id/layout_signed"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="@dimen/dimen_item_inner_padding_top"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/img_signed"
            android:layout_width="16dp"
            android:layout_height="18dp"
            android:layout_centerInParent="true"
            android:layout_gravity="center_vertical"
            android:layout_marginRight="5dp"
            android:scaleType="centerCrop"
            android:src="@drawable/icon_sign"
            android:visibility="visible" />

        <TextView
            android:id="@+id/essence_booktitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:singleLine="true"
            android:text="阿里巴巴的新部门"
            android:textColor="@color/color_item_title"
            android:textSize="@dimen/dimen_item_title_textsize" />
    </LinearLayout>


